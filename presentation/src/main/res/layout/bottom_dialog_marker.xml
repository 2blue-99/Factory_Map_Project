<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.factory_map_project.ui.bottomDialog.MarkerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="26dp">

        <View
            android:id="@+id/close"
            android:layout_width="36dp"
            android:layout_height="6dp"
            android:background="@drawable/bottom_sheet_top_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{viewModel.uiData.companyName, default = `회사이름`}"
                    android:textSize="24sp"
                    android:onLongClick="@{() -> viewModel.onLongClickCompanyName()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/remove"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:onClick="@{() -> viewModel.onClickDelete(viewModel.uiData.id)}"
                        android:src="@drawable/icon_delete"
                        app:tint="@color/dark_gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/check_box"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_unknown_marker"
                        android:onClick="@{() -> viewModel.onClickCheckBox()}"
                        app:setCheckBackground="@{viewModel.currentCheckState}"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방문 상태"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="6dp"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부지면적"
                    android:textSize="16sp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.uiData.lotArea, default = `부지면적`}"
                    android:textSize="16sp"
                    android:textColorHint="@color/light_gray"
                    android:hint="@string/marker_dialog_empty"
                    android:onLongClick="@{() -> viewModel.onLongClickLotArea()}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="6dp"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="고용인원"
                    android:textSize="16sp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.uiData.employeeCount, default = `고용인원`}"
                    android:textSize="16sp"
                    android:textColorHint="@color/light_gray"
                    android:hint="@string/marker_dialog_empty"
                    android:onLongClick="@{() -> viewModel.onLongClickEmployeeCount()}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="6dp"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="규모분류"
                    android:textSize="16sp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.uiData.scaleDivisionName, default = `규모분류`}"
                    android:textSize="16sp"
                    android:textColorHint="@color/light_gray"
                    android:hint="@string/marker_dialog_empty"
                    android:onLongClick="@{() -> viewModel.onLongClickScaleDivisionName()}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="6dp"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="등록일자"
                    android:textSize="16sp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.uiData.registrationDate, default = `등록일자`}"
                    android:textSize="16sp"
                    android:textColorHint="@color/light_gray"
                    android:hint="@string/marker_dialog_empty"
                    android:onLongClick="@{() -> viewModel.onLongClickRegistrationDate()}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="6dp"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="대표상품"
                    android:textSize="16sp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.uiData.productInfo, default = `대표상품`}"
                    android:textSize="16sp"
                    android:textColorHint="@color/light_gray"
                    android:hint="@string/marker_dialog_empty"
                    android:onLongClick="@{() -> viewModel.onLongClickProductInfo()}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="6dp"
                android:onClick="@{() -> viewModel.onClickContact(viewModel.uiData.contact)}"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textSize="16sp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.uiData.contact, default = `전화번호`}"
                    android:textSize="16sp"
                    app:underline="@{true}"
                    android:textColorHint="@color/light_gray"
                    android:hint="@string/marker_dialog_empty"
                    android:onLongClick="@{() -> viewModel.onLongClickContact()}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="6dp"
                android:onClick="@{() -> viewModel.onClickAddress()}"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="도로명"
                    android:textSize="16sp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.uiData.loadAddress, default = `도로명`}"
                    android:textSize="16sp"
                    app:underline="@{true}"
                    android:textColorHint="@color/light_gray"
                    android:hint="@string/marker_dialog_empty"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메모"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/memo"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edit_text_memo"
                    android:hint="메모 사항을 입력해주세요."
                    android:textColorHint="@color/light_gray"
                    android:text="@{viewModel.uiData.memo}"
                    android:gravity="top|start"
                    android:padding="16dp"
                    android:scrollbars="vertical"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:overScrollMode="always"
                    android:imeOptions="actionNone"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/include_button_bottom_sheet"
            app:onNegativeClick="@{() -> viewModel.onClickNegative()}"
            app:onPositiveClick="@{() -> viewModel.onClickConfirm()}"
            />

    </LinearLayout>
</layout>