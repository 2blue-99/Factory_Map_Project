<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@+id/mapsFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.factory_map_project.ui.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.factory_map_project.ui.setting.SettingFragment"
        android:label="SettingFragment" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.factory_map_project.ui.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/moveToSetting"
            app:destination="@+id/settingFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_to_right"
            app:exitAnim="@anim/hold">
        </action>
        <action
            android:id="@+id/moveToCompare"
            app:destination="@+id/compareFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_to_right"
            app:exitAnim="@anim/hold">
        </action>
    </fragment>
    <fragment
        android:id="@+id/compareFragment"
        android:name="com.example.factory_map_project.ui.compare.CompareFragment"
        android:label="CompareFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.factory_map_project.ui.login.LoginFragment"
        android:label="LoginFragment" />
</navigation>